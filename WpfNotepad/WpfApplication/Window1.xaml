<Window x:Class="WpfApplication.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="End" Height="101.22" Width="300" WindowStartupLocation="CenterOwner" >
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Text="Save file before exiting?" Margin="65,0,64,29" />
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center"  Width="250" Margin="0,25,0,0">
                <Button x:Name="Button1" Content="Save"  Height="20" Width="70" VerticalAlignment="Center" HorizontalAlignment="Left" Click="Save_Click" />
                <Button x:Name="Button2" Content="Not save" Height="20" Width="70" VerticalAlignment="Center" HorizontalAlignment="Center" Click="NotSave_Click" />
                <Button x:Name="Button" Content="Cancel" Height="20" Width="70" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Cancel_Click" />

            </Grid>

        </Grid>

    </Grid>
</Window>
